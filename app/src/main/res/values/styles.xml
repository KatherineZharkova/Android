<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/sky</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/finger_paint</item>
        <item name="android:textSize">@dimen/DefaultTextSize</item>
    </style>

    <style name="ColdTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimaryCold</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCold</item>
        <item name="colorAccent">@color/colorAccentCold</item>
        <item name="android:colorBackground">@color/colorBackgroundCold</item>
        <item name="android:windowBackground">@drawable/sky</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/finger_paint</item>
        <item name="android:textSize">@dimen/DefaultTextSize</item>
    </style>

</resources>
