<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/sky</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/finger_paint</item>
        <item name="android:textSize">@dimen/TextSizeDefault</item>
    </style>

    <style name="ColdTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimaryCold</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCold</item>
        <item name="colorAccent">@color/colorAccentCold</item>
        <item name="android:colorBackground">@color/colorBackgroundCold</item>
        <item name="android:windowBackground">@drawable/sky</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/finger_paint</item>
        <item name="android:textSize">@dimen/TextSizeDefault</item>
    </style>

    <style name="cardTimeStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardIconStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/weather</item>
        <item name="android:layout_marginStart">@dimen/padding_8</item>
        <item name="android:layout_marginEnd">@dimen/padding_8</item>
    </style>


</resources>
