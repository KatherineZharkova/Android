<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".ChooseCityActivity">

    <EditText
        android:id="@+id/cityInputBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:hint="@string/cityInput"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/goButton"
        app:layout_constraintEnd_toStartOf="@id/goButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/okButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/City1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/city_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@id/goButton"
        app:layout_constraintStart_toStartOf="@id/cityInputBox"
        app:layout_constraintTop_toBottomOf="@id/goButton" />

    <TextView
        android:id="@+id/City2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/city_2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@id/City1"
        app:layout_constraintStart_toStartOf="@id/City1"
        app:layout_constraintTop_toBottomOf="@id/City1" />

    <TextView
        android:id="@+id/City3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/city_3"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@id/City2"
        app:layout_constraintStart_toStartOf="@id/City2"
        app:layout_constraintTop_toBottomOf="@id/City2" />

    <TextView
        android:id="@+id/City4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/city_4"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@id/City3"
        app:layout_constraintStart_toStartOf="@id/City3"
        app:layout_constraintTop_toBottomOf="@id/City3" />

    <TextView
        android:id="@+id/City5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/city_5"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@id/City4"
        app:layout_constraintStart_toStartOf="@id/City4"
        app:layout_constraintTop_toBottomOf="@id/City4" />

    <TextView
        android:id="@+id/showExtrasTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/show_extra_details"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@id/goButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/cityInputBox"
        app:layout_constraintTop_toBottomOf="@id/City5" />

    <CheckBox
        android:id="@+id/humidityCB"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:text="@string/humidityTV"
        app:layout_constraintEnd_toEndOf="@id/showExtrasTV"
        app:layout_constraintStart_toStartOf="@id/showExtrasTV"
        app:layout_constraintTop_toBottomOf="@id/showExtrasTV" />

    <CheckBox
        android:id="@+id/windCB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/windTV"
        app:layout_constraintEnd_toEndOf="@id/humidityCB"
        app:layout_constraintStart_toStartOf="@id/humidityCB"
        app:layout_constraintTop_toBottomOf="@id/humidityCB" />

    <CheckBox
        android:id="@+id/barometerCB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/barometerTV"
        app:layout_constraintEnd_toEndOf="@id/windCB"
        app:layout_constraintStart_toStartOf="@id/windCB"
        app:layout_constraintTop_toBottomOf="@id/windCB" />

</androidx.constraintlayout.widget.ConstraintLayout>