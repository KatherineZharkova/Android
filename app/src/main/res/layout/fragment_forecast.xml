<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".View.ForecastFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="@dimen/TitleTextSize"
            android:textStyle="bold"
            tools:text="@string/city_1" />

        <Button
            android:id="@+id/webButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/idea_btn"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:textSize="@dimen/TitleTextSize"
        android:textStyle="bold"
        tools:text="17Â°C" />

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:textStyle="bold"
        tools:text="@string/ForecastDescription" />

    <LinearLayout
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/humidityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humidityTV"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/humidityInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            tools:text="77" />

        <TextView
            android:id="@+id/humidityUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humidityUnit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/windTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/windTV"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/windInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7" />

        <TextView
            android:id="@+id/windUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/windUnit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/barometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/barometerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barometerTV"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/barometerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="777" />

        <TextView
            android:id="@+id/barometerUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barometerUnit" />

    </LinearLayout>

</LinearLayout>